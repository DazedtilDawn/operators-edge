{
  "permissions": {
    "allow": [
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(npm test:*)",
      "Bash(npm run:*)",
      "Bash(pytest:*)",
      "Bash(ls:*)",
      "Bash(cat:*)",
      "Bash(pwd:*)",
      "Bash(echo:*)",
      "Bash(mkdir:*)",
      "Bash(touch:*)"
    ],
    "deny": [
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)"
    ]
  },
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": "/edge-yolo",
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/dispatch_hook.py"
          }
        ]
      },
      {
        "matcher": "/edge-prune",
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/prune_skill_hook.py"
          }
        ]
      },
      {
        "matcher": "/edge-fork",
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/fork_skill_hook.py"
          }
        ]
      },
      {
        "matcher": "/edge",
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/edge_skill_hook.py"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/session_start.py"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "EnterPlanMode|ExitPlanMode",
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/plan_mode.py"
          }
        ]
      },
      {
        "matcher": "Bash|Edit|Write|NotebookEdit",
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/pre_tool.py"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash|Edit|Write|Read|NotebookEdit",
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/post_tool.py"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/stop_gate.py"
          }
        ]
      }
    ]
  }
}
